{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--enable-gui-log-window",
        "false",
        "--log-level",
        "CRITICAL"
      ],
      "description": "Professional coding agent with semantic tools for intelligent codebase analysis"
    }
  }
}